@using Microsoft.AspNetCore.Identity
@using Drukarka3DData.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a href="@Url.Action("ManageAccount", "Home")"><strong>Witaj @UserManager.GetUserName(User)!</strong></a>
    </li>
    <li>
        <a href="@Url.Action("MyOrders", "Home")">Moje projekty</a>
    </li>
    <li>
        <a href="@Url.Action("LogOut","Home")">Wyloguj</a>
    </li>
}
else
{
    <li><a href="@Url.Action("Login", "Home")">Zaloguj</a></li>
    <li><a href="@Url.Action("Register","Home")">Rejestracja</a></li>
}
