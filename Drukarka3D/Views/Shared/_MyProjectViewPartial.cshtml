@using Microsoft.AspNetCore.Identity
@using Drukarka3DData.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="row" style="background-color: #e9e9e9;margin-left: auto;margin-right: auto; margin-bottom: 10px">
        <div class="col-sm-12">
            <h4>Panel użytkownika</h4>
        </div>
        <div class="col-sm-6 col-xs-6" style="text-align: right">
            <form asp-controller="Account" asp-action="ProjectShare" method="post" enctype="multipart/form-data" style="margin-top:5px">
                <label>Projekt publiczny: <input type="checkbox" checked /></label>
                <button type="submit" class="btn btn-default" id="confirm" style="margin-bottom: 10px">Zmień</button>
            </form>
        </div>
        <div class="col-sm-6 col-xs-6" style="text-align: left">
                <button type="submit" class="btn btn-default" id="print" style="margin-bottom: 10px; margin-top: 5px;">Drukuj</button>
        </div>
    </div>
}