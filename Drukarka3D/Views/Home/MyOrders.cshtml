@model ICollection<Drukarka3DData.Models.Order>

<script>
    window.addEventListener("load", function () {
        $("#select-sorting").change(function () {
            sortTable();
        });
        $("#select-order").change(function () {
            sortTable();
        });



    }, false);

    var sortBy =
        {
            DATE: 1,
            STATUS: 2
        };

    var sortOrder =
        {
            ASC: 1,
            DESC: 2

        };
</script>
<div class="box">
    <h2>Moje projekty</h2>
    <br>
    <div class="flipkart-navbar-search smallsearch col-sm-6 col-xs-11">
        <form asp-controller="Home" asp-action="MyOrders">
            <div class="row searchBox">

                <input class="flipkart-navbar-input col-xs-11" placeholder="Wpisz wyszukiwaną frazę" type="text" name="SearchString" id="SearchString">
                <button class="flipkart-navbar-button col-xs-1" id="searchPhrase">
                    <svg width="15px" height="15px">
                        <path d="M11.618 9.897l4.224 4.212c.092.09.1.23.02.312l-1.464 1.46c-.08.08-.222.072-.314-.02L9.868 11.66M6.486 10.9c-2.42 0-4.38-1.955-4.38-4.367 0-2.413 1.96-4.37 4.38-4.37s4.38 1.957 4.38 4.37c0 2.412-1.96 4.368-4.38 4.368m0-10.834C2.904.066 0 2.96 0 6.533 0 10.105 2.904 13 6.486 13s6.487-2.895 6.487-6.467c0-3.572-2.905-6.467-6.487-6.467 "></path>
                    </svg>
                </button>
            </div>
        </form>
    </div>
    <div id="search-text" class="col-sm-2">
        Sortuj:
    </div>
    <div class="col-sm-2">
        <select id="select-sorting" class="form-control">
            <option value="1" selected="selected">dodano</option>
            <option value="2">status</option>
        </select>
    </div>
    <div class="col-sm-2">
        <select id="select-order" class="form-control">
            <option value="1" selected="selected">rosnąco</option>
            <option value="2">malejąco</option>
        </select>
    </div>
    <table class="table table-hover table-striped table-bordered" id="orders-table">
        <thead>
            <tr>
                <th class="text-center" scope="col">Status</th>
                <th class="text-center" scope="col">Data przesłania</th>
                <th class="text-center" scope="col">Publiczne</th>
                <th class="text-center" scope="col">Pobierz</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var i in Model)
            {
            <tr>
                <td>@i.Status</td>
                <td>@i.UploadDate.ToString()</td>
                <td>@if(!@i.Private){<input type="checkbox" checked>}</td>
                <td>

                    <a asp-action="Download" asp-route-filename="@i.Path"><img src="@i.UserScreenPath" width="100" height="100"></a>
                </td>
            </tr>
            }


        </tbody>
    </table>
    <ul class="pagination pagination-sm">
        <li><a href="@Url.Action("MyOrders","Home")">1</a></li>
        <li><a href="@Url.Action("MyOrders","Home")">2</a></li>
        <li><a href="@Url.Action("MyOrders","Home")">3</a></li>
        <li><a href="@Url.Action("MyOrders","Home")">4</a></li>
        <li><a href="@Url.Action("MyOrders","Home")">5</a></li>
    </ul>
</div>