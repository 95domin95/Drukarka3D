@model Drukarka3DData.Models.ChangePasswordViewModel
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Zmień Hasło";
    //ViewData.AddActivePage(ManageNavPages.ChangePassword);
}


<div class="row box">
    <h2>@ViewData["Title"]</h2>
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button btn btn-default">Aktualizuj hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
